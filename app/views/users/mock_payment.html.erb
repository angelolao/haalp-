<div class="container-fluid">
  <div class="row">
    <div class="col-md-5 center-block">
      <div class="dashboard-card">
        <div class="dashboard-card-header">
          <h5>Payment</h5>
        </div>
        <%= form_for current_user, url: accept_payment_path do |f| %>
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-money"></i></div>
              <%= f.number_field :money, autofocus: true, value: 0, class: "form-control" %>
            </div>
          </div>
          <div class="actions">
            <%= f.submit "Update", class: "btn btn-payment" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
