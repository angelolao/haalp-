<div class="remodal" data-remodal-id="task_modal">
  <button data-remodal-action="close" class="remodal-close"></button>
  <h1>Post A Task!</h1>
  <p>
  Insert some awesome descriptions here.
  </p>
  <%= form_for(:task, url: url, method: submit_action.to_sym) do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="form-group">
      <label for="recipient-name" class="control-label pull-left">Title:</label>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="recipient-name" class="control-label pull-left">Description:</label>
      <%= f.text_area :description, class: "form-control" %><br />
    </div>

    <div class="form-group">
      <label for="recipient-name" class="control-label pull-left">Due Date:</label>
      <%= f.text_field :due_date, class: "form-control" %><br />
    </div>

    <div class="form-group">
      <label for="recipient-name" class="control-label pull-left">Location:</label>
      <%= f.text_field :location, class: "form-control" %><br />
    </div>

    Category Ids:
    <% Category.select(:id, :title).each do |c| %>
      <%= f.check_box :category_ids, { multiple: true }, c.id, nil %>
      <label><%= c.title  %></label><br />
    <% end %>

    <div class="form-group">
      <label for="recipient-name" class="control-label pull-left">Price:</label>
      <%= f.text_field :price, class: "form-control" %><br />
    </div>

    <div class="form-group">
      <label for="recipient-name" class="control-label pull-left">Worker Limit:</label>
      <%= f.text_field :worker_number, class: "form-control" %><br />
    </div>

  <button data-remodal-action="cancel" class="remodal-cancel">Cancel</button>
  <%= submit_tag "Submit Task!", class: "remodal-confirm" %>
  <% end %>
</div>

